import streamlit as st
from openai import OpenAI

st.set_page_config(page_title="Sparx AI ⚡", page_icon="⚡")

client = OpenAI(api_key=st.secrets["OPENAI_API_KEY"])

st.title("⚡ Sparx AI")
st.caption("Your personal AI assistant powered by GPT-4.")

user_input = st.text_input("You:", "")

if st.button("Send") and user_input:
    response = client.chat.completions.create(
        model="gpt-4o-mini",
        messages=[
            {"role": "system", "content": "You are Sparx AI, a helpful, energetic assistant with a witty personality."},
            {"role": "user", "content": user_input}
        ]
    )
    st.markdown("**Sparx AI:** " + response.choices[0].message.content)
